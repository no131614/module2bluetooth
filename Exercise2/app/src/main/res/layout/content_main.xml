<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e5e5e"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ubc.cpen391.exercise1.exercise2.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:text="Tip (%):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalBillTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tipPercentageTextView" />

    <TextView
        android:text="Split Bill:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipPercentageTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:id="@+id/splitBillTextView" />


    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/splitBillMinusButton"
        android:textSize="25dp"
        android:textColor="#FF0000"
        android:layout_alignTop="@+id/splitBillPlusButton"
        android:layout_alignLeft="@+id/tipPercentageMinusButton"
        android:layout_alignStart="@+id/tipPercentageMinusButton" />

    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:textSize="25dp"
        android:textColor="#FF0000"
        android:id="@+id/tipPercentageMinusButton"
        android:layout_alignBaseline="@+id/tipPercentagePlusButton"
        android:layout_alignBottom="@+id/tipPercentagePlusButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:textColor="#00FF00"
        android:id="@+id/tipPercentagePlusButton"
        android:layout_above="@+id/splitBillPlusButton"
        android:layout_toLeftOf="@+id/tipPercentageMinusButton"
        android:layout_toStartOf="@+id/tipPercentageMinusButton"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/splitBillPlusButton"
        android:textSize="25dp"
        android:textColor="#00FF00"
        android:layout_alignBaseline="@+id/splitBillValueTextView"
        android:layout_alignBottom="@+id/splitBillValueTextView"
        android:layout_alignLeft="@+id/tipPercentagePlusButton"
        android:layout_alignStart="@+id/tipPercentagePlusButton" />

    <TextView
        android:text="Total Bill:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:id="@+id/totalBillTextView"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="0"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tipPercentageValueTextView"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_alignBaseline="@+id/tipPercentageMinusButton"
        android:layout_alignBottom="@+id/tipPercentageMinusButton"
        android:layout_toRightOf="@+id/splitBillPlusButton"
        android:layout_toEndOf="@+id/splitBillPlusButton" />

    <TextView
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalBillValueTextView"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tipPercentagePlusButton"
        android:layout_alignEnd="@+id/tipPercentageMinusButton" />

    <TextView
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalToPayValue"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/totalToPayTextViewView"
        android:layout_alignBottom="@+id/totalToPayTextViewView"
        android:layout_marginTop="40dp"
        android:textSize="32dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:text="Total Tip:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTipTextView"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/totalToPayTextViewView"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Total Per Person:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalPerPersonTextView"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/totalTipTextView"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalPerPersonValue"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/totalPerPersonTextView"
        android:layout_alignBottom="@+id/totalPerPersonTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTipValue"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/totalPerPersonTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:id="@+id/button4" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/totalPerPersonTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:id="@+id/button5" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button8"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:id="@+id/button6" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_below="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReset"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:text="Del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDel"
        android:layout_below="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Total to Pay:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:id="@+id/totalToPayTextViewView"
        android:layout_below="@+id/splitBillPlusButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/splitBillValueTextView"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_alignBaseline="@+id/splitBillTextView"
        android:layout_alignBottom="@+id/splitBillTextView"
        android:layout_toRightOf="@+id/splitBillPlusButton"
        android:layout_toEndOf="@+id/splitBillPlusButton" />
</RelativeLayout>
